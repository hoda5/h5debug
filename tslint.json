{
  "extends": "tslint:recommended",
  "rules": {
    "no-debugger": true,
    "no-console": true,
    "interface-name": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "variable-name": false,
    "no-namespace": false,
    "semicolon": [
      true,
      "never"
    ],
    "curly": false,
    // "curly": [
    //   true,
    //   "as-needed"
    // ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "//"
      }
    ],
    "space-before-function-paren": false,
    "radix": false,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "await-promise": true,
    "no-unused-variable": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}