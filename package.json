{
  "name": "@hoda5/h5debug",
  "version": "1.0.6",
  "description": "",
  "main": "dist/h5debug.js",
  "types": "dist/h5debug.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "rm -rf dist ; tsc -p . --watch",
    "lint": "tslint --project .",
    "lintfix": "tslint --project . --fix",
    "test": "tsc ; jest",
    "coverage": "sensible-browser coverage/index.html",
    "codecov": "cat coverage/coverage-final.json | npx codecov"
  },
  "author": "josefernandotolentino@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thr0w/h5debug.git"
  },
  "license": "ISC",
  "dependencies": {
    "@hoda5/extensions": "^1.1.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.9.1",
    "typescript": "^3.2.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "roots": [
      "src/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 75
      }
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
