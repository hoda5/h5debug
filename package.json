{
  "name": "@hoda5/h5debug",
  "version": "1.0.4",
  "description": "",
  "main": "dist/h5debug.js",
  "types": "dist/h5debug.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "rm -rf dist ; tsc -p . --watch",
    "lint": "tslint --project .",
    "lintfix": "tslint --project . --fix",
    "test": "jest",
    "coverage": "sensible-browser coverage/index.html",
    "codecov": "cat coverage/coverage-final.json | npx codecov"
  },
  "author": "josefernandotolentino@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thr0w/h5debug.git"
  },
  "license": "ISC",
  "dependencies": {
    "@hoda5/extensions": "^1.0.17",
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.2",
    "@types/react": "^16.4.0",
    "@types/react-test-renderer": "^16.0.1",
    "jest": "^23.2.0",
    "react-test-renderer": "^16.4.1",
    "ts-jest": "^22.4.6",
    "tslint": "^5.9.1",
    "typescript": "^2.9.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "roots": [
      "src/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 75
      }
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
